<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAppMVVM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimaryVariant">@android:color/holo_orange_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/holo_orange_dark</item>
        <item name="colorSecondaryVariant">@android:color/holo_orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m" tools:ignore="ObsoleteSdkInt">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m" tools:ignore="ObsoleteSdkInt">@android:color/black</item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/heebo_medium</item>
        <item name="android:navigationBarColor">@color/black</item>

    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.NewsAppMVVM">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
    
</resources>