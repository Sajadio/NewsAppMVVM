<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAppMVVM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/holo_orange_dark</item>
        <item name="colorSecondaryVariant">@android:color/holo_orange_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m" tools:ignore="ObsoleteSdkInt">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m" tools:ignore="ObsoleteSdkInt">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.NewsAppMVVM">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
    
</resources>