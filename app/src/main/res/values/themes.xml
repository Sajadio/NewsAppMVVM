<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAppMVVM" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowLightStatusBar" tools:ignore="ObsoleteSdkInt" tools:targetApi="m">
            true
        </item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:ignore="ObsoleteSdkInt" tools:targetApi="m">
            @color/white
        </item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/heebo_medium</item>

    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.NewsAppMVVM">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize5" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Headline1">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/heebo_bold</item>
    </style>

    <style name="SubTitle1">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/subTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitle2">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/subTitle</item>
        <item name="fontFamily">@font/heebo_regular</item>
    </style>

    <style name="SubTitle3">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/subTitle</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/caption</item>
        <item name="fontFamily">@font/heebo_regular</item>

    </style>

</resources>