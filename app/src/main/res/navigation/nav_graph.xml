<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.newsappmvvm.ui.fragment.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.newsappmvvm.ui.fragment.favorite.FavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
        <argument
            android:name="article"
            app:argType="com.example.newsappmvvm.data.model.domen.Article" />
    </fragment>
    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.newsappmvvm.ui.fragment.article.WebViewFragment"
        tools:layout="@layout/fragment_web_view">
        <argument
            android:name="article"
            app:argType="com.example.newsappmvvm.data.model.domen.Article" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.newsappmvvm.ui.fragment.article.ArticleFragment"
        android:label="ArticleFragment"
        tools:layout="@layout/fragment_article">
        <action
            android:id="@+id/action_articleFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
        <argument
            android:name="article"
            app:argType="com.example.newsappmvvm.data.model.domen.Article" />
    </fragment>
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.newsappmvvm.ui.fragment.explore.ExploreFragment"
        android:label="ExploreFragment"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_exploreFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.newsappmvvm.ui.fragment.notifigation.NotificationFragment"
        android:label="NotificationFragment"
        tools:layout="@layout/fragment_notification">
        <action
            android:id="@+id/action_notificationFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
</navigation>